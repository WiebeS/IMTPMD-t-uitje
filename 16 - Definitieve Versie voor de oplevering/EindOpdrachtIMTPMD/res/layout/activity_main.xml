<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff8d00"
    tools:context=".MainActivity"
    android:orientation="vertical"
    style="@android:style/Animation.Translucent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:weightSum="1"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/welkomtekst"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:layout_margin="10dp"
            android:text="Welkom bij de app van 't uitje! Selecteer uw favoriete bestemming voor een overzicht van hotels. "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button04AMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="amsterdam"
            android:text="Amsterdam"
            android:textColor="#ffffff"
            style="@android:style/Animation.Translucent" />

        <Button
            android:id="@+id/button03BER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="berlijn"
            android:text="Berlijn"
            android:textColor="#ffffff"
            style="@android:style/Animation.Translucent" />

        <Button
            android:id="@+id/button02REY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="reykjavik"
            android:text="Reykjavik"
            android:textColor="#ffffff"
            style="@android:style/Animation.Translucent" />

        <Button
            android:id="@+id/Button01Parijs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Parijs"
            android:onClick= "parijs"

            android:singleLine="false"
            android:textColor="#ffffff"
            style="@android:style/Animation.Translucent" />
    </LinearLayout>

    <ListView
        android:id= "@id/android:list"
        android:layout_height="359dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
    </ListView>

</LinearLayout>